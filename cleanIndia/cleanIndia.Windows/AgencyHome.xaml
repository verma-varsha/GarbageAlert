<Page
    x:Class="cleanIndia.AgencyHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:cleanIndia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <AppBarButton Click="MapView_Click" HorizontalAlignment="Left" Height="108" Icon="Map" Label="View Map" Margin="1227,456,0,0" VerticalAlignment="Top" Width="129"/>
        <AppBarButton HorizontalAlignment="Left" Height="108" Icon="Go" Label="Logout" Margin="1224,615,0,0" VerticalAlignment="Top" Width="142"/>
        <ListView x:Name="myComplaints_ListView" IsItemClickEnabled="True" HorizontalAlignment="Left" Height="635" Margin="120,10,0,0" VerticalAlignment="Top" Width="834">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontSize="25" Text="{Binding DateOfComplaint}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
