<Page
    x:Class="cleanIndia.UserAddComplaint"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:cleanIndia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
	<Page.BottomAppBar>
		<CommandBar>
			<AppBarButton Click="SubmitComplaint_Click" Icon="Save" Label="Submit"/>
			<AppBarButton Icon="Go" Label="Logout"/>
		</CommandBar>
	</Page.BottomAppBar>

    <Grid>
        <Image x:Name="img" HorizontalAlignment="Left" Height="246" Margin="65,115,0,0" VerticalAlignment="Top" Width="255"/>
        <TextBox x:Name="ComplaintTitle" HorizontalAlignment="Left" Height="40" Margin="65,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="276" PlaceholderText="Enter Complaint Title"/>
        <Button Content="upload picture" Click="UploadPicture_Click" HorizontalAlignment="Left" Height="40" Margin="88,412,0,0" VerticalAlignment="Top" Width="217"/>

    </Grid>
</Page>
